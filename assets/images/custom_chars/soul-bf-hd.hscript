    trace(": )");
    var tex = FlxAtlasFrames.fromSparrow(hscriptPath + 'char.png', hscriptPath + 'char.xml');
    trace(": )");
    char.frames = tex;
    char.animation.addByPrefix('idle', 'Dad idle dance', 24, false);
    char.animation.addByPrefix('singUP', 'Dad Sing Note UP', 24, false);
    char.animation.addByPrefix('singLEFT','Dad Sing Note RIGHT', 24, false);
    char.animation.addByPrefix('singRIGHT', 'Dad Sing Note LEFT', 24, false);
    char.animation.addByPrefix('singDOWN', 'Dad Sing Note DOWN', 24, false);
    

    char.addOffset('idle', 5, -112);
    char.addOffset('singUP', -60, -74);
    char.addOffset('singRIGHT', -30, -131);
    char.addOffset('singLEFT', -40, -137);
    char.addOffset('singDOWN', -40, -145);
    char.playAnim('idle');

    char.flipX = false;

    char.enemyOffsetX = 0;
    char.enemyOffsetY = 0;
    char.playerOffsetX = 0;
    char.playerOffsetY = 0;
    char.followCamX = 280;
    char.followCamY = 0;
    char.midpointX = 0;
    char.midpointY = 0;
    char.setGraphicSize(Std.int(char.width * 0.8));
}
