// char is a Character
function init(char) {
    trace(": )");
    var tex = FlxAtlasFrames.fromSparrow(hscriptPath + 'char.png', hscriptPath + 'char.xml');
    trace(": )");
    char.frames = tex;
    char.animation.addByPrefix('idle', 'Yuri Idle0', 24, false);
    char.animation.addByPrefix('singUP', 'Yuri Sing Note Up0', 24, false);
    char.animation.addByPrefix('singLEFT','Yuri Sing Note Left0', 24, false);
    char.animation.addByPrefix('singRIGHT', 'Yuri Sing Note Right0', 24, false);
    char.animation.addByPrefix('singDOWN', 'Yuri Sing Note Down0', 24, false);
    trace("finish anim");

    char.addOffset('idle', 150, -250);
    char.addOffset('singUP', 155, -207);
    char.addOffset('singRIGHT', 155, -255);
    char.addOffset('singLEFT', 155, -354);
    char.addOffset('singDOWN', 155, -292);

    char.playAnim('idle');

    char.flipX = true;

    char.enemyOffsetX = 0;
    char.enemyOffsetY = 0;
    char.playerOffsetX = 0;
    char.playerOffsetY = 0;
    char.followCamX = 200;
    char.followCamY = 220;
    char.midpointX = 0;
    char.midpointY = 0;
}
